---
import "@/styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Robot/Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://your-site-url.com/" />

    <!-- Meta Info -->
    <title>Faculty Review Hub | University Review System</title>
    <meta name="description" content="A comprehensive platform for students to review faculty members and help improve the university experience." />
    <meta name="keywords" content="faculty, review, university, education, student, feedback" />
    <meta name="author" content="Faculty Review Hub" />

    <!-- Theme Preference (default: Dark) -->
    <meta name="theme" content="dark" />
    <meta name="color-scheme" content="light dark" />
    <meta name="darkreader-lock" content="dark" />

    <!-- Open Graph / Facebook -->
    <meta property="og:site_name" content="Faculty Review Hub" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Faculty Review Hub | University Review System" />
    <meta property="og:description" content="A comprehensive platform for students to review faculty members and help improve the university experience." />
    <meta property="og:url" content="https://faculty-review-hub.com/" />
    <!-- <meta property="og:image" content="https://your-site-url.com/assets/og-image.png"> -->

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Your Twitter Title" />
    <meta name="twitter:description" content="Brief description for Twitter sharing (max 200 characters)." />
    <meta name="twitter:site" content="@yourusername" />
    <!-- <meta name="twitter:image" content="https://your-site-url.com/assets/twitter-card.png"> -->
  </head>

  <body>
    <slot />
  </body>
</html>
